
{
  "name": "Simple Bookmark",
  "version": "1.0",
  "description": "保存网址，包括网页的位置。",
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "unlimitedStorage", "chrome://favicon/" ,"file://*/*" 
  ],
  "icons": {
      "128": "images/icon128.png",
      "48": "images/icon48.png"
   },
  "browser_action": {
      "default_title": "Bookmark",
      "default_icon": "images/icon.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 2
}